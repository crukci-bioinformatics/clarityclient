<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd" updateCheck="false">

    <defaultCache eternal="false" maxElementsInMemory="500"
                  overflowToDisk="false" diskPersistent="false"
                  timeToIdleSeconds="0" timeToLiveSeconds="600"
                  memoryStoreEvictionPolicy="LRU"/>

    <cache name="com.genologics.ri.LimsEntity"
           maxElementsInMemory="500"
           timeToLiveSeconds="600" />

    <cache name="com.genologics.ri.artifact.Artifact"
           maxElementsInMemory="2000"
           timeToLiveSeconds="300" />

    <cache name="com.genologics.ri.sample.Sample"
           maxElementsInMemory="1000"
           timeToLiveSeconds="300" />
           
    <cache name="com.genologics.ri.project.Project"
           maxElementsInMemory="50"
           timeToLiveSeconds="600" />
           
    <cache name="com.genologics.ri.container.Container"
           maxElementsInMemory="500"
           timeToLiveSeconds="300" />
           
    <cache name="com.genologics.ri.containertype.ContainerType"
           maxElementsInMemory="50"
           timeToLiveSeconds="1800" />
           
    <cache name="com.genologics.ri.controltype.ControlType"
           maxElementsInMemory="50"
           timeToLiveSeconds="1800" />
           
    <cache name="com.genologics.ri.process.GenologicsProcess"
           maxElementsInMemory="200"
           timeToLiveSeconds="300" />
           
    <cache name="com.genologics.ri.file.GenologicsFile"
           maxElementsInMemory="2000"
           timeToLiveSeconds="300" />

    <cache name="com.genologics.ri.instrument.Instrument"
           maxElementsInMemory="50"
           timeToLiveSeconds="1800" />
           
    <cache name="com.genologics.ri.lab.Lab"
           maxElementsInMemory="100"
           timeToLiveSeconds="1800" />
           
    <cache name="com.genologics.ri.researcher.Researcher"
           maxElementsInMemory="500"
           timeToLiveSeconds="1800" />
           
    <cache name="com.genologics.ri.reagenttype.ReagentType"
           maxElementsInMemory="2000"
           timeToLiveSeconds="1800" />
           
</ehcache>
